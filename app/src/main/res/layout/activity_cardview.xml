<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="70dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:src="@drawable/xiaoxin"/>

            <TextView
                android:id="@+id/text1"
                app:layout_constraintLeft_toRightOf="@id/image1"
                app:layout_constraintTop_toTopOf="@id/image1"
                app:layout_constraintBottom_toTopOf="@id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="蜡笔小新" />

            <TextView
                android:id="@+id/text2"
                app:layout_constraintLeft_toLeftOf="@id/text1"
                app:layout_constraintBottom_toBottomOf="@id/image1"
                app:layout_constraintTop_toBottomOf="@id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Hello,美女，你喜欢吃青椒吗" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="70dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:src="@drawable/mingren"/>

            <TextView
                android:id="@+id/text3"
                app:layout_constraintLeft_toRightOf="@id/image2"
                app:layout_constraintTop_toTopOf="@id/image2"
                app:layout_constraintBottom_toTopOf="@id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="鸣人" />

            <TextView
                android:id="@+id/text4"
                app:layout_constraintLeft_toLeftOf="@id/text3"
                app:layout_constraintBottom_toBottomOf="@id/image2"
                app:layout_constraintTop_toBottomOf="@id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="我是要成为火影的男人!!!" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>