<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialAppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialAppTheme_NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <!--沉浸式主题-->
    <style name="TranslucentTheme" parent="MaterialAppTheme">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--Toolbar 弹出的 popup 的主题-->
    <style name="ToolBarPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <!--背景颜色-->
        <item name="android:background">@color/color1</item>
<!--        <item name="android:background">@drawable/image1</item>-->
        <!--设置文字颜色-->
        <item name="android:textColorPrimary">@color/color3</item>
        <!--设置文字大小-->
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>

    </style>

    <!--Toolbar 弹出 popup的主题 的设置-->
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <!--这个属性为 false 时， popup在 Toolbar 的下面展示-->
        <item name="overlapAnchor">false</item>
        <!--弹窗横向偏移量 默认右侧对齐-->
        <item name="android:dropDownHorizontalOffset">-20dp</item>
        <!--弹窗纵向偏移量-->
        <item name="android:dropDownVerticalOffset">20dp</item>
    </style>

    <!--TextInputLayout的文字修改-->
    <style name="TextInputLayoutStyle">
        <item name="android:textSize">16sp</item>
        <!--这个是控制你输入的字母大小写的！-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#91452e</item>
    </style>



    <style name="constraint_text" xmlns:app="http://schemas.android.com/apk/res-auto">
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_button_bg2</item>
        <item name="android:gravity">center</item>
    </style>
</resources>